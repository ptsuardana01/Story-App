<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1500">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/splash_text"
            android:translationX="-100dp"
            motion:transitionEasing="cubic(0,1,0.32,1)"
            motion:layout_editor_absoluteX="1dp"
            motion:layout_constraintTop_toBottomOf="@+id/splash_logo" />
        <Constraint
            android:id="@+id/splash_logo"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="150dp"
            android:layout_height="150dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:visibility="invisible"
            motion:transitionEasing="cubic(0.2,1,0.8,0.8)" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/splash_text"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/splash_logo"
            motion:layout_constraintStart_toStartOf="parent"
            motion:transitionEasing="cubic(0,1,0,1)" />
        <Constraint
            android:id="@+id/splash_logo"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="150dp"
            android:layout_height="150dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:transitionEasing="cubic(0,0.39,0.6,1)" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/next" >
        <Constraint
            android:id="@+id/splash_logo"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="150dp"
            android:layout_height="150dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:scaleX="100"
            android:scaleY="100"
            android:translationX="400dp"
            android:translationY="400dp"
            motion:transitionEasing="cubic(0,0.62,0.61,1)" />
        <Constraint
            android:id="@+id/splash_text"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/splash_logo"
            motion:layout_constraintHorizontal_bias="0.498"
            motion:layout_constraintStart_toStartOf="parent"
            android:visibility="invisible"
            motion:transitionEasing="cubic(0,1,0,1)" />
    </ConstraintSet>
    <Transition
        motion:constraintSetStart="@+id/end"
        motion:constraintSetEnd="@+id/next"
        motion:duration="1500"
        motion:motionInterpolator="cubic(0.2,0.21,0.8,0.8)" />
</MotionScene>